@inherits LayoutComponentBase
<FluentDesignTheme Direction="@Direction" StorageName="theme" />
<FluentLayout>
    <FluentHeader>
        <FluentCombobox TOption="string" Label="Language" Value=@selectedCulture ValueChanged="changeCulture">
            <FluentOption Value="en-US">English</FluentOption>
            <FluentOption Value="fa-IR">فارسی</FluentOption>
        </FluentCombobox>
    </FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentNavMenu Width="250">
            <FluentNavGroup Title="DataGrid">
                <FluentNavLink Href="/datagrid-columns">column types</FluentNavLink>
                <FluentNavLink Href="/datagrid-selectrows">select rows</FluentNavLink>
                <FluentNavLink Href="/datagrid-edit">inline edite</FluentNavLink>
                <FluentNavLink Href="/datagrid-observable">observable</FluentNavLink>
                <FluentNavLink Href="/datagrid-virtualize">virtualize</FluentNavLink>
                <FluentNavLink Href="/datagrid-cutomeType">custom type</FluentNavLink>
            </FluentNavGroup>
            <FluentNavLink Href="/button">Button</FluentNavLink>
            <FluentNavLink Href="/anchor">anchor link</FluentNavLink>
            <FluentNavLink Href="/observable-component">Observable component</FluentNavLink>
            
        </FluentNavMenu>
         <FluentBodyContent Style="height:calc(100vh - 50px)">
            @Body
         </FluentBodyContent>
    </FluentStack>
</FluentLayout>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />
